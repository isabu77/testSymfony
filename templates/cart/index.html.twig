{% extends 'base.html.twig' %} {% block title %}Panier{% endblock %} {% block body %}
<section class='panier container'>
    <h1 class="texte-center mb-5"></h1>
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>Nomination</th>
                <th>Extrait</th>
                <th>quantité</th>
                <th>prix TTC</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td>{{ item.article.title}}</td>
                <td>{{ item.article.content | slice(0,50)}}...</td>
                <td>{{ item.qty}}</td>
                <td>{{ item.qty * item.article.price}}</td>
                <td class='btn btn-danger fas fa-trash'><a href="{{path('cart_delete', {'id': item.article.id})}}"></a></td>
            </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td>TOTAL TTC</td>
                <td>{{ total }}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th>Nomination</th>
                <th>Extrait</th>
                <th>quantité</th>
                <th>prix TTC</th>
            </tr>

        </tfoot>
    </table>
    <p class='text-center btn btn-primary'>
        <a href="{{path('cart_send')}}" class='text-left'>Commander</a></p>

</section>
{% endblock %}